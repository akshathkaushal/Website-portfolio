<!-- Page Content -->
<div class="container">

  <!-- Page Heading -->
  <h1 class="headline text-center"><strong>My Open Source Projects</strong></h1>

  <div class="row">
    <% @projects.each do |project| %>
        <div class="col-lg-4 col-sm-6 mb-4" style="padding-bottom: 10px;">
            <div class="box">
                <div class="card-body">
                  <div class="card-title text-center">
                      <h2>
                      <a href="https://<%= project.link %>" target="_blank" class="link" data-toggle="tooltip" title="Source code"><%= project.title %></a></h2>
                  </div>
                  <p class="card-text"><%= project.description %></p>
                </div>
            </div>
        </div>
    <% end %>
    
  </div>
  <!-- /.row -->
</div>
<!-- /.container -->