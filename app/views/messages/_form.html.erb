<%= simple_form_for(@message) do |f| %>
  <div class="errors">
    <%= f.error_notification %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
</div>

<div class="container bg1">
  <legend class="h1 text-center bg1" ><strong>Contact Me</strong></legend><br>
  <div class="container wrapper">
    <form class="form-horizontal" role="form" method="post" action="">

      <!--Email Address-->

      <div class="form-group">
        <label class="control-label col-sm-2" for="Email"><span class="required">*</span>Email Address:</label>
        <div class="col-sm-10 inputGroupContainer">
          <div class="input-group"> 
            <%= f.input :email, label: false, class: "form-control", id: "email", input_html: { class: 'form-control' }, wrapper: false %>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label class="control-label col-sm-2" for="name"><span class="required">*</span>Subject:</label>
        <div class="col-sm-10 inputGroupContainer">
          <div class="input-group">
            <%= f.input :subject, label: false, id: "name", input_html: { class: 'form-control' }, wrapper: false %>
          </div>
        </div>
      </div>

      <!--Text Area-->
      <div class="form-group">
        <label class="control-label col-sm-2" for="message"><span class="required">*</span>Message:</label>
        <div class="col-sm-10 inputGroupContainer">
          <div class="input-group">
            <%= f.input :body, label: false, input_html: { class: 'form-control', rows: "10" }, wrapper: false %>
          </div>
        </div>
      </div>

      <!--SEND Button-->

      <div class="form-group">
        <label class="col-sm-2 control-label"></label>
        <div class="col-sm-10">
          <div class="input-group"><%= f.button :submit, :class => "btn btn-primary" %></div>
        </div>
      </div>

    </form>
  </div>

  <% end %>